<Window x:Class="OOP_Project.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Головне меню" Height="576" Width="1024" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Window.Resources>

        <Style x:Key="RoundedToggleButton" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="FontFamily" Value="Georgia"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#444"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>

    </Window.Resources>

    <Grid Background="#FFEEEEEE">

        <!-- Верхня панель -->
        <DockPanel Background="#FFDDDDFF" Height="70" VerticalAlignment="Top" LastChildFill="False">

            <!-- Кнопки навігації -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" Margin="20,10,0,10">
                <ToggleButton x:Name="NowShowingButton" Content="Зараз у кіно"
                              Style="{StaticResource RoundedToggleButton}" Width="160"  Background="#D5CEFA" Foreground="#222"/>
                <ToggleButton x:Name="ComingSoonButton" Content="Скоро у прокаті"
                              Style="{StaticResource RoundedToggleButton}" Width="160"  Background="#8A79C7" Foreground="White"/>
            </StackPanel>

            <!-- Профіль + Пошук -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Margin="0,10,20,10" VerticalAlignment="Center">

                <!-- Поле пошуку -->
                <Border Background="White" CornerRadius="10" Width="250" Height="40">
                    <Grid>
                        <TextBox x:Name="SearchBox"
                                 Margin="0" Padding="10,5,30,5"
                                 Background="Transparent" BorderThickness="0"
                                 FontFamily="Georgia" FontSize="14"
                                 VerticalContentAlignment="Center"/>
                        <Image Source="Images/search.png" Width="16" Height="16"
                               HorizontalAlignment="Right" VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    </Grid>
                </Border>

                <!-- Іконка профілю -->
                <Button Width="50" Height="50" Margin="15,0,0,0" BorderThickness="0" Background="Transparent" Cursor="Hand">
                    <Grid Width="50" Height="50">
                        <Ellipse Fill="White" Stretch="Uniform" />
                        <Image Source="Images/user.png"
               Width="30" Height="30"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
                    </Grid>
                </Button>

            </StackPanel>
        </DockPanel>

        <!-- 📜 Список фільмів -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="20,80,20,20">
            <StackPanel x:Name="MovieListPanel" Orientation="Vertical" Background="White"/>
        </ScrollViewer>
    </Grid>
</Window>
